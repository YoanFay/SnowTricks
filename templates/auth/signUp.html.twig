{% extends 'layout/menu.html.twig' %}

{% block main %}

    <div class="background fullpage d-flex justify-content-center align-items-center">
        <div class="card p-4 w-25">
            {{ form_start(form) }}
            {{ form_label(form.login) }}
            {{ form_widget(form.login, { 'attr': { 'class' : 'form-control mb-3' } }) }}
            {{ form_label(form.mail) }}
            {{ form_widget(form.mail, { 'attr': { 'class' : 'form-control mb-3' } }) }}
            {{ form_label(form.password) }}
            {{ form_widget(form.password, { 'attr': { 'class' : 'form-control mb-3' } }) }}
            {{ form_label(form.submit) }}
            {{ form_widget(form.submit, { 'attr': { 'class' : 'btn btn-primary mt-3' } }) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}