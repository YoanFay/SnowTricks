{% extends 'layout/menu.html.twig' %}

{% block main %}
    <div class="background fullpage d-flex justify-content-center align-items-center">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="card p-4 w-25">
                    <form action="{{ path('signIn') }}" method="post">
                        <fieldset>
                            <div class="form-group">
                                <label for="username">Login</label>
                                <input type="text" id="login" name="login" value="{{ last_username }}"
                                       class="form-control mb-3"/>
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" id="password" name="password" class="form-control mb-3"/>
                            </div>
                            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> Connexion
                            </button>
                        </fieldset>
                    </form>
                </div>
    </div>
{% endblock %}