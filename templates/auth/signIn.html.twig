{% extends 'layout/menu.html.twig' %}

{% block main %}
    <div class="background fullpage d-flex flex-column justify-content-center align-items-center">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div id="signIn" class="card p-4 Width25ToResponsive75">
            <form action="{{ path('signIn') }}" method="post">
                <label for="username">Identifiant</label>
                <input type="text" id="login" name="login" value="{{ last_username }}" class="form-control mb-3 mt-1"/>
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" class="form-control mb-3 mt-1"/>
                <p><a href="{{ path('ask_new_password') }}" class="mb-3"><small>Mot de passe oubli√© ?</small></a></p>
                <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-sign-in" aria-hidden="true"></i> Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}