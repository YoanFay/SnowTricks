{% extends 'base.html.twig' %}

{% block header %}

    <div class="p-2 d-flex flex-lg-row flex-column justify-content-lg-between w-100 h-100">
        <div class="d-flex flex-row align-items-center justify-content-center h-100">
            <img id="logoImg" src="/img/logo.png" class="cursor-click" onclick="Homepage()">
            <h1 id="pageTitle" class="ms-4">{% block titlePage %}{{ title }}{% endblock %}</h1>
        </div>
        <div class="d-flex flex-lg-row flex-column align-items-center">
            <div class="d-lg-none">
                <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-center">
                    <button class="navbar-toggler mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="m-0 p-0 d-flex flex-lg-row flex-column align-items-center">
                            <li class="px-lg-2 menu"><a href="{{ path('index') }}">Accueil</a></li>
                            <li class="px-lg-2 menu"><a href="{{ path('index', {'tricksPage': 'tricks'}) }}">Tricks</a></li>
                            {% if app.user == null %}
                                <li class="px-lg-2 menu"><a href="{{ path('signUp') }}">Inscription</a></li>
                                <li class="px-lg-2 menu"><a href="{{ path('signIn') }}">Connexion</a></li>
                            {% else %}
                                <li class="px-lg-2 menu"><a href="{{ path('logout') }}">Déconnexion</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="d-none d-lg-block">
                <ul class="m-0 p-0 d-flex flex-lg-row flex-column align-items-center">
                    <li class="px-lg-2 menu"><a href="{{ path('index') }}">Accueil</a></li>
                    <li class="px-lg-2 menu"><a href="{{ path('index', {'tricksPage': 'tricks'}) }}">Tricks</a></li>
                    {% if app.user == null %}
                        <li class="px-lg-2 menu"><a href="{{ path('signUp') }}">Inscription</a></li>
                        <li class="px-lg-2 menu"><a href="{{ path('signIn') }}">Connexion</a></li>
                    {% else %}
                        <li class="px-lg-2 menu"><a href="{{ path('logout') }}">Déconnexion</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        function Homepage() {
            window.location.href = "{{ path('index') }}";
        }
    </script>
{% endblock %}