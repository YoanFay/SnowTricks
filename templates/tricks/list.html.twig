{% for trick in tricks %}
    <div class="col-2 mt-3 mx-4">
        <div class="h-75">
            <img class="w-100 h-100"
                    {% if trick.images.values[0] is defined %}
                        src="/img/Tricks/{{ trick.slug }}/{{ trick.images.values[0].name }}.{{ trick.images.values[0].type }}"
                    {% else %}
                        src="/img/noImg.png"
                    {% endif %}
            >
        </div>
        <div class="border d-flex flex-row justify-content-between align-items-center h-25 bg-white">
            <p class="m-2"><a
                        href="{{ path('tricksDetails', {'slug': trick.slug}) }}">{{ trick.name }}</a>
            </p>
            <p class="m-2">
                {% if app.user %}
                    <span class="material-symbols-outlined cursor-click">edit</span>
                    <span onclick="deleteTricks('{{ trick.name }}', '{{ path('tricksDelete', {'slug': trick.slug}) }}')"
                          class="material-symbols-outlined cursor-click">delete</span>
                {% endif %}
            </p>
        </div>
    </div>
{% endfor %}